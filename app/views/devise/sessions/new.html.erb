<div class="log-in-box">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div >
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'field' %>
    </div>

    <div >
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'field' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div >
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'form-btn' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>